<script type="text/javascript">
    function validateForm() {
        var isValidForm = true;
        var nameValue = document.getElementById("Name").value;
        var emailValue = document.getElementById(Emailid).value;

        //Validate the name field
        if (nameValue == null || nameValue == "") {
            document.getElementById("validationName")
                .textContent = "Customer Name id required.";
            isValidForm = false;
        }

        //Validate the class field
        if(emailValue == null || emailValue == ""){
            document.getElementById("validationEmail")
                .textContent = "Customer Email is required.";
            isValidForm = false;
        }
        return isValidForm;
    }
</script>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />

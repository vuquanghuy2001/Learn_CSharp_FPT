<div class="col-3">
    <div class="card my-4">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Category</h5>
            <p class="card-text">@Model.Description</p>
            <a href="#" class="btn btn-primary rounded">@Model.Price</a>


            <form id="@Model.ProductID" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="ProductID" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    @Model.Description
                    <button type="submit" class="btn btn-success btn-sm pull-right" style="float: right">
                        Add To Cart
                    </button>
                </span>
            </form>

        </div>
    </div>
</div>